<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <com.google.android.material.card.MaterialCardView
       android:layout_width="300dp"
       android:layout_height="150dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:id="@+id/m_java"
       android:elevation="20dp"
       app:cardCornerRadius="15dp"
       android:layout_margin="20dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/java"
           android:theme="@style/text_view"
           android:layout_margin="10dp"/>
       <com.google.android.material.button.MaterialButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/btn_java"
           android:layout_gravity="bottom|right"
           android:layout_margin="10dp"
           app:icon="@drawable/baseline_arrow_right_alt_24"
           app:iconSize="30dp"
           android:gravity="center"
           app:iconGravity="end"
           android:text="Visit"
           android:textStyle="bold" />
   </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/m_java"
        android:id="@+id/m_python"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/python"
            android:theme="@style/text_view"
            android:layout_margin="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_python"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            app:icon="@drawable/baseline_arrow_right_alt_24"
            app:iconSize="30dp"
            android:gravity="center"
            app:iconGravity="end"
            android:text="Visit"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/m_python"
        android:id="@+id/m_kotlin"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kotlin"
            android:theme="@style/text_view"
            android:layout_margin="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_kotlin"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            app:icon="@drawable/baseline_arrow_right_alt_24"
            app:iconSize="30dp"
            android:gravity="center"
            app:iconGravity="end"
            android:text="Visit"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/m_kotlin"
        android:id="@+id/m_database"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/database"
            android:theme="@style/text_view"
            android:layout_margin="10dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_database"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            app:icon="@drawable/baseline_arrow_right_alt_24"
            app:iconSize="30dp"
            android:gravity="center"
            app:iconGravity="end"
            android:text="Visit"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>